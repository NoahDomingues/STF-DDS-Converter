<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>STF_DDS_Converter</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\RedHatDisplay-Bold.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="Themes\TurquoiseTheme.xaml" />
    <Page Remove="TurquoiseTheme.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\RedHatDisplay-Bold.ttf" />
    <Resource Include="Themes\TurquoiseTheme.xaml" />
    <Resource Include="TurquoiseTheme.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Resource>
  </ItemGroup>

</Project>
