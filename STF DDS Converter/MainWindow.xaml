<Window x:Class="STF_DDS_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="STF ↔ DDS Converter"
        Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">

            <!-- Conversion Buttons -->
            <Button Content="Convert STF to DDS"
              Click="ConvertStfToDds_Click"
              Margin="0,0,0,10"/>
            <Button Content="Convert DDS to STF"
              Click="ConvertDdsToStf_Click"
              Margin="0,0,0,20"/>

            <!-- Fallback Fields -->
            <TextBlock Text="Width:" />
            <TextBox x:Name="WidthBox"
               Margin="0,5"/>

            <TextBlock Text="Compression:" />
            <ComboBox x:Name="FormatBox"
                Margin="0,5">
                <ComboBoxItem Content="DXT1"/>
                <ComboBoxItem Content="DXT3"/>
                <ComboBoxItem Content="DXT5"/>
            </ComboBox>

            <!-- Message Area -->
            <TextBlock x:Name="MessageBlock"
                 Foreground="DarkRed"
                 Margin="0,10,0,0"/>

        </StackPanel>
    </Grid>
</Window>
